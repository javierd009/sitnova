# ============================================
# SITNOVA - Variables de Entorno
# Copia este archivo a .env y completa los valores
# ============================================

# ============================================
# GENERAL
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO
PROJECT_NAME=SITNOVA

# ============================================
# LLM CONFIGURATION
# ============================================
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-api03-xxx
OPENAI_API_KEY=sk-xxx
LLM_MODEL=claude-sonnet-4-20250514
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# ============================================
# SUPABASE (Cloud Database)
# ============================================
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ============================================
# REDIS (State & Cache)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_TTL=3600

# ============================================
# HIKVISION (Access Control)
# ============================================
HIKVISION_HOST=192.168.1.100
HIKVISION_PORT=80
HIKVISION_USER=admin
HIKVISION_PASSWORD=your-password-here
HIKVISION_DOOR_ID=1
HIKVISION_TIMEOUT=10

# ============================================
# CÁMARAS RTSP
# ============================================
CAMERA_ENTRADA_URL=rtsp://admin:password@192.168.1.101:554/Streaming/Channels/101
CAMERA_CEDULA_URL=rtsp://admin:password@192.168.1.102:554/Streaming/Channels/101
CAMERA_ENTRADA_ID=cam_entrada
CAMERA_CEDULA_ID=cam_cedula

# ============================================
# FREEPBX (PBX para llamadas)
# ============================================
FREEPBX_HOST=192.168.1.50
FREEPBX_AMI_PORT=5038
FREEPBX_AMI_USER=portero
FREEPBX_AMI_SECRET=your-ami-secret
FREEPBX_CONTEXT=from-internal
FREEPBX_TIMEOUT=30

# ============================================
# ULTRAVOX (Voice AI)
# ============================================
ULTRAVOX_API_KEY=uvx_xxx
ULTRAVOX_WEBHOOK_SECRET=whsec_xxx
ULTRAVOX_VOICE=es-CR-SofiaNeural
ULTRAVOX_MODEL=fixie-ai/ultravox-v0_2

# ============================================
# VISIÓN ARTIFICIAL
# ============================================
YOLO_MODEL_PATH=models/yolov8n.pt
YOLO_DEVICE=cpu
PLATE_OCR_ENGINE=easyocr
CEDULA_OCR_ENGINE=easyocr
OCR_CONFIDENCE_THRESHOLD=0.7
OCR_LANGUAGES=["es", "en"]

YOLO_PLATE_MODEL=models/yolov8_plates.pt
YOLO_PERSON_MODEL=models/yolov8n.pt

# ============================================
# FASTAPI
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1
CORS_ORIGINS=["*"]

# ============================================
# LANGGRAPH
# ============================================
CHECKPOINT_DB_PATH=data/sitnova_checkpoints.db
MAX_RETRIES=3
SESSION_TIMEOUT=300

# ============================================
# STORAGE
# ============================================
IMAGES_PATH=data/images
LOGS_PATH=data/logs
MODELS_PATH=models

# ============================================
# SEGURIDAD
# ============================================
SECRET_KEY=change-this-in-production-to-a-random-64-char-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# NOTIFICACIONES
# ============================================
# Evolution API (WhatsApp)
EVOLUTION_API_URL=http://localhost:8080
EVOLUTION_API_KEY=your-evolution-key
EVOLUTION_INSTANCE_NAME=sitnova

# OneSignal (Push)
ONESIGNAL_APP_ID=your-onesignal-app-id
ONESIGNAL_REST_API_KEY=your-onesignal-api-key

# ============================================
# OPERADOR HUMANO (Human in the Loop)
# ============================================
# Teléfono del operador para transferencias cuando el sistema no puede resolver
OPERATOR_PHONE=50688015665
# Extension SIP del operador para transferir llamadas
OPERATOR_EXTENSION=1002
# Tiempo de espera (segundos) antes de ofrecer transferir a operador
OPERATOR_TIMEOUT=120
