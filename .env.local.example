# ============================================
# SITNOVA - Local Environment Variables
# Para el servicio OCR en el condominio
# Copy to .env.local and configure all values
# ============================================

# ============================================
# CLOUD CONNECTION
# ============================================
CLOUD_BACKEND_URL=https://api.sitnova.tudominio.com
CLOUD_API_KEY=tu-cloud-api-key

# ============================================
# CAMERAS (RTSP)
# ============================================
# Camara de entrada (lectura de placas)
CAMERA_ENTRADA_URL=rtsp://admin:password@192.168.1.101:554/Streaming/Channels/101
CAMERA_ENTRADA_ID=cam_entrada

# Camara de cedulas (lectura de documentos)
CAMERA_CEDULA_URL=rtsp://admin:password@192.168.1.102:554/Streaming/Channels/101
CAMERA_CEDULA_ID=cam_cedula

# ============================================
# OCR CONFIGURATION
# ============================================
# Dispositivo: cpu o cuda (si tienes GPU)
YOLO_DEVICE=cpu

# Confianza minima para OCR
OCR_CONFIDENCE_THRESHOLD=0.7

# Idiomas para OCR
OCR_LANGUAGES=["es", "en"]

# ============================================
# HIKVISION (Access Control)
# ============================================
HIKVISION_HOST=192.168.1.100
HIKVISION_PORT=80
HIKVISION_USER=admin
HIKVISION_PASSWORD=tu-password-hikvision
HIKVISION_DOOR_ID=1
HIKVISION_TIMEOUT=10

# ============================================
# FREEPBX (PBX para llamadas)
# ============================================
FREEPBX_HOST=192.168.1.50
FREEPBX_AMI_PORT=5038
FREEPBX_AMI_USER=portero
FREEPBX_AMI_SECRET=tu-ami-secret
FREEPBX_CONTEXT=from-internal
FREEPBX_TIMEOUT=30

# ============================================
# SYNC SERVICE
# ============================================
# Intervalo de retry para eventos fallidos (minutos)
SYNC_INTERVAL=5

# ============================================
# REDIS LOCAL (Cache)
# ============================================
REDIS_HOST=redis-local
REDIS_PORT=6379
