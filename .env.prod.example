# ============================================
# SITNOVA - Production Environment Variables
# Copy to .env.prod and configure all values
# ============================================

# ============================================
# DOMAIN & SSL
# ============================================
DOMAIN=sitnova.integratec-ia.com
SSL_EMAIL=admin@integratec-ia.com

# ============================================
# GENERAL
# ============================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=WARNING
PROJECT_NAME=SITNOVA

# ============================================
# SUPABASE (Cloud Database)
# ============================================
SUPABASE_URL=https://lgqeeumflbzzmqysqkiq.supabase.co
SUPABASE_ANON_KEY=tu-anon-key
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key

# Frontend (publicas - se usan en build)
NEXT_PUBLIC_SUPABASE_URL=https://lgqeeumflbzzmqysqkiq.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=tu-anon-key
NEXT_PUBLIC_API_URL=https://api.sitnova.integratec-ia.com

# ============================================
# LLM CONFIGURATION
# ============================================
LLM_PROVIDER=google
GOOGLE_API_KEY=tu-google-api-key
LLM_MODEL=gemini-2.0-flash-exp
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# Alternative providers (uncomment if using)
# LLM_PROVIDER=anthropic
# ANTHROPIC_API_KEY=tu-anthropic-key
# LLM_MODEL=claude-sonnet-4-20250514

# ============================================
# ULTRAVOX (Voice AI)
# ============================================
ULTRAVOX_API_KEY=tu-ultravox-api-key
ULTRAVOX_WEBHOOK_SECRET=tu-webhook-secret
ULTRAVOX_VOICE=es-CR-SofiaNeural
ULTRAVOX_MODEL=fixie-ai/ultravox-v0_2

# ============================================
# EVOLUTION API (WhatsApp)
# ============================================
EVOLUTION_API_KEY=tu-evolution-api-key-seguro
EVOLUTION_API_URL=https://evolution.sitnova.integratec-ia.com
EVOLUTION_INSTANCE_NAME=sitnova

# ============================================
# REDIS (Docker internal)
# ============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SESSION_TTL=3600

# ============================================
# FASTAPI
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=2
CORS_ORIGINS=["https://sitnova.integratec-ia.com"]

# ============================================
# SEGURIDAD
# ============================================
# Generar con: openssl rand -hex 32
SECRET_KEY=generar-string-aleatorio-de-64-caracteres
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# CLOUD API KEY (para auth de servicios locales)
# Generar con: openssl rand -hex 32
# ============================================
CLOUD_API_KEY=generar-api-key-para-servicios-locales

# ============================================
# STORAGE (Docker volumes)
# ============================================
IMAGES_PATH=/app/data/images
LOGS_PATH=/app/data/logs

# ============================================
# LANGGRAPH
# ============================================
CHECKPOINT_DB_PATH=/app/data/checkpoints.db
MAX_RETRIES=3
SESSION_TIMEOUT=300

